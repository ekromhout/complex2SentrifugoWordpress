<?xml version="1.0"?>
<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3" xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3" oid="8098b124-c20c-4965-8adf-e528abedf7a4">
    <name>User Template</name>
    <mapping>
        <strength>strong</strength>
        <source>
            <path>name</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>OrgType</targetType>
                <filter>
                    <q:equal>
                        <q:path>extension/member</q:path>                       
                        <expression>
                            <script>
                                <code>
                                    basic.stringify(name)
                                </code>
                            </script>
                        </expression>
                    </q:equal>
                </filter>
                <assignmentProperties>
                    <subtype>grouper-group</subtype>
                </assignmentProperties>
            </assignmentTargetSearch>       
        </expression>
        <target>
            <path>assignment</path>
            <set>
                <condition>
                    <script>
                        <code>
                            assignment?.subtype.contains('grouper-group')
                        </code>
                    </script>
                </condition>
            </set>
        </target>
    </mapping>
</objectTemplate>
